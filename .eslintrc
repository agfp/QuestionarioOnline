{
    "extends": ["eslint:recommended", "google"],
    "plugins": [
        "html"
    ],
     "settings": {
        "html/html-extensions": [".html", ".vue"],
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "semi": "error",
        "no-unused-vars": "warn",
        "no-var": "warn",
        "indent": ["warn", 4],
        "arrow-parens": "off",
        "comma-dangle": "off",
        "max-len": ["warn", 120],
        "require-jsdoc": "off",
        "no-trailing-spaces": "off",
        "no-console": "off"
    }
}
